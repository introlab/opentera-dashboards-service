{
   "version" : "1.0",
   "parserVersion": "1.0",
   "name": "Participant Overview Dashboard",
   "layout": {
        "type": "BaseLayout",
        "id": "layout1",
        "widgets": [],
        "layouts":[
            {
                "type": "CenteredRowLayout",
                "id": "layout4",
                "widgets": [
                    {
                       "type": "ListViewWidget",
                       "id": "participantList",
                       "properties": {
                           "dataSource": {"type": "raw", "value": "participantListData"},
                           "delegate": {"type": "delegate", "value": "ParticipantDelegate"},
                           "Layout.fillWidth": {"type": "bool", "value": "true"},
                           "Layout.fillHeight": {"type": "bool", "value": "true"}
                       }
                    }
                ],
               "layouts":[
                   {
                       "type": "CenteredColumnLayout",
                       "id": "rightLayout",
                       "properties": {
                            "Layout.fillWidth": {"type": "bool", "value": "true"}
                       },
                       "widgets": [
                           {
                               "type": "Rectangle",
                               "id": "wdgTimeline",
                               "properties": {
                                    "Layout.fillWidth": {"type": "bool", "value": "true"},
                                    "height": {"type": "int", "value": 100}
                               }
                           }
                        ],
                        "layouts": [{
                            "type": "CenteredRowLayout",
                            "id": "rightBottomLayout",
                            "widgets": [
                                {
                                   "type": "ListViewWidget",
                                   "id": "participantSessionList",
                                   "properties": {
                                       "dataSource": {"type": "raw", "value": "participantSessionListData"},
                                       "delegate": {"type": "delegate", "value": "SessionDelegate"},
                                       "Layout.fillWidth": {"type": "bool", "value": "true"},
                                       "Layout.fillHeight": {"type": "bool", "value": "true"}
                                   }
                                }
                            ]
                        }

                       ]
                   }
               ]

            }
        ]
   },
   "dataSources": [
        {
            "type": "ParticipantListDataSource",
            "id": "participantListData",
            "properties": {
                "id_project": {"type": "int", "value": 1},
                "enabledOnly": {"type": "bool", "value": "true"},
                "autoFetch": {"type": "bool", "value": "true"},
                "sortField": {"type": "string", "value": "participant_lastsession"},
                "sortDesc": {"type": "bool", "value": "false"},
                "sortType": {"type": "int", "value": 2}
            }
        },
        {
            "type": "ParticipantSessionListDataSource",
            "id": "participantSessionListData",
            "properties": {
                "id_participant": {"type": "int", "value": -1}
            }
        }
   ],
   "connections": [
        {
            "source": {"object": "participantListData", "signal": "onItemSelected"},
            "target": {"object": "participantSessionListData", "slot": "setParticipant", "args": ["id_participant"]}
        }
    ]
}
