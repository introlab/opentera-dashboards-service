{
   "version" : "1.0",
   "name": "Participant Overview Dashboard",
   "params": {
      "id_project": "1",
      "id_site": "1"
   },
   "layout": {
        "type": "ThreeRowsLayout",
         "properties": {
            "id": {"type": "raw", "value": "layout1"},
            "anchors.fill": {"type": "raw", "value": "parent"}
        }
   },
   "widgets":[
      {
         "type": "Rectangle",
         "properties": {
            "id": {"type": "raw", "value": "rect1"},
            "parent": {"type": "raw", "value": "layout1.row1"},
            "color": {"type": "string", "value": "#ff0000"},
            "radius": {"type": "int", "value": 5},
            "width": {"type": "int", "value": 300},
            "height": {"type": "int", "value": 300}
         }
      },
      {
         "type": "ClockWidget",
         "properties": {
            "id": {"type": "raw", "value": "clock1"},
            "parent": {"type": "raw", "value": "layout1.row2"},
            "width": {"type": "int", "value": 400},
            "height": {"type": "int", "value": 100}
         }
      },
      {
         "type": "ClockWidget",
         "properties": {
            "id": {"type": "raw", "value": "clock2"},
            "parent": {"type": "raw", "value": "layout1.row2"},
            "width": {"type": "int", "value": 400},
            "height": {"type": "int", "value": 100}
         }
      },
      {
         "type": "ButtonWidget",
         "properties": {
            "id": {"type": "raw", "value": "button"},
            "parent": {"type": "raw", "value": "layout1.row2"},
            "text": {"type": "string", "value": "Click Me To Refresh!"}
         }
      },
      {
         "type": "ListViewWidget",
         "properties": {
             "id": {"type": "raw", "value": "participantList"},
             "layout": {"type": "raw", "value": "layout1.row3"},
             "width": {"type": "int", "value": 300},
             "height": {"type": "int", "value": 200},
             "model": {"type": "raw", "value": "participantListData.model"},
             "delegate": {"type": "raw", "value": "participantListData.delegate"}
         }
      },
      {
         "type": "ListViewWidget",
         "properties": {
             "id": {"type": "raw", "value": "participantSessionList"},
             "parent": {"type": "raw", "value": "layout1.row3"},
             "width": {"type": "int", "value": 300},
             "height": {"type": "int", "value": 200},
             "model": {"type": "raw", "value": "participantSessionListData.model"},
             "delegate": {"type": "raw", "value": "participantSessionListData.delegate"}
         }
      }
   ],
   "dataSources": [
        {
            "type": "ParticipantListDataSource",
            "properties": {
                "id": {"type": "raw", "value":"participantListData"},
                "url": {"type": "string", "value": "/api/user/participants"},
                "id_project": {"type": "int", "value": 1}
            }
        },
        {
            "type": "ParticipantSessionListDataSource",
            "properties": {
                "id": {"type": "raw", "value":"participantSessionListData"},
                "url": {"type": "string", "value": "/api/user/sessions"},
                "id_participant": {"type": "int", "value": 0}
            }
        }
   ],
   "connections": [
        {
            "source": {"object": "button", "signal": "onClicked"},
            "target": {"object": "participantListData", "slot": "update", "args": []}
        },
        {
            "source": {"object": "participantListData", "signal": "onParticipantClicked"},
            "target": {"object": "participantSessionListData", "slot": "setParticipant", "args": ["id_participant"]}
        }
    ]
}
